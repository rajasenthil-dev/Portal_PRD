{
    "xsappname": "mck-portal",
    "tenant-mode": "dedicated",
    "description": "Security profile of called application",
    "oauth2-configuration": {
        "grant-types": [
            "client_credentials",
            "authorization_code",
            "refresh_token",
            "urn:ietf:params:oauth:grant-type:jwt-bearer",
            "user_token"
        ],
        "credential-types": [
            "binding-secret",
            "x509"
        ],
        "system-attributes": [
            "groups"
        ],
        "allowedproviders": [],
        "redirect-uris": [
            "https://**cfapps.us20.hana.ondemand.com/**",
            "https://**cfapps.us20.hana.ondemand.com/my/logout",
            "https://*.applicationstudio.cloud.sap/**"
        ]
    },
    "scopes": [
        {
            "name": "$XSAPPNAME.Admin",
            "description": "Admin scope"
        },
        {
            "name": "$XSAPPNAME.Viewer",
            "description": "Viewer scope with restricted access"
        },
        {
            "name": "$XSAPPNAME.Internal",
            "description": "Internal access scope"
        }
    ],
    "attributes": [
        {
            "name": "SalesOrg",
            "description": "SalesOrg",
            "valueType": "string",
            "valueRequired": false
        },
        {
            "name": "ManufacturerNumber",
            "description": "ManufacturerNumber",
            "valueType": "string",
            "valueRequired": false
        },
        {
            "name": "SalesOffice",
            "description": "SalesOffice",
            "valueType": "string",
            "valueRequired": false
        },
        {
            "name": "ProfitCentre",
            "description": "ProfitCentre",
            "valueType": "string",
            "valueRequired": false
        },
        {
            "name": "MFGName",
            "description": "type",
            "valueType": "string",
            "valueRequired": false
        }
    ],
    "role-templates": [
        {
            "name": "Admin",
            "description": "Administrator Role",
            "scope-references": [
                "$XSAPPNAME.Admin"
            ]
        },
        {
            "name": "Viewer",
            "description": "Viewer Role with Restricted Access",
            "scope-references": [
                "$XSAPPNAME.Viewer"
            ],
            "attribute-references": [
                "SalesOrg",
                "ManufacturerNumber",
                "SalesOffice",
                "ProfitCentre",
                "MFGName"
            ]
        },
        {
            "name": "Internal",
            "description": "Internal Role with Full Access",
            "scope-references": [
                "$XSAPPNAME.Internal"
            ]
        }
    ],
    "role-collections": [
        {
            "name": "Admin",
            "description": "Internal User Role Collection",
            "role-template-references": [
                "$XSAPPNAME.Admin"
            ]
        },
        {
            "name": "Internal",
            "description": "Internal User Role Collection",
            "role-template-references": [
                "$XSAPPNAME.Internal"
            ]
        },
        {
            "name": "Viewer",
            "description": "Viewer User Role Collection",
            "role-template-references": [
                "$XSAPPNAME.Viewer"
            ]
        }
    ]
}
