  "cds": {
    "service": {
      "path": "srv"
    },
    "hana": {
      "deploy-format": "hdbtable",
      "skip-generation": {
        "hdbview": true
      }
    },
    "requires": {
      "auth": {
        "kind": "xsuaa"
      },
      "logger": {
        "level": "debug"
      },
      "xsuaa_api": {
        "kind": "rest",
        "credentials": {
          "url": "https://discovery-sunrise.authentication.us20.hana.ondemand.com",
