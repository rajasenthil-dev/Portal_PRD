                            <Title id="_IDGenTitle3" class="mck_TileContentTitle" text="{i18n>tileTitle3}"/>
                            <Text id="_IDGenNumericContent3" class="mck_TileContent" text="{path: 'summaryCounts>/counts/Damage'}"/>
                        </FlexBox>  
                         <FlexBox id="_IDGenFlexBox4" direction="Column" class="mck_Tile">
                            <Title id="_IDGenTitle4" class="mck_TileContentTitle" text="{i18n>tileTitle4}"/>
                            <Text id="_IDGenNumericContent4" class="mck_TileContent" text="{path: 'summaryCounts>/counts/Retains'}"/>
                        </FlexBox> 
                        <FlexBox id="_IDGenFlexBox5" direction="Column" class="mck_Tile">
                            <Title id="_IDGenTitle5" class="mck_TileContentTitle" text="{i18n>tileTitle5}"/>
                            <Text id="_IDGenNumericContent5" class="mck_TileContent" text="{path: 'summaryCounts>/counts/QualityHold'}"/>
                        </FlexBox> 
                         <FlexBox id="IDGenFlexBox6" direction="Column" class="mck_Tile">
                            <Title id="_IDGenTitle6" class="mck_TileContentTitle" text="{i18n>tileTitle6}"/>
                            <Text id="_IDGenNumericContent6" class="mck_TileContent" text="{path: 'summaryCounts>/counts/Returns'}"/>
                        </FlexBox> 
                        <FlexBox id="IDGenFlexBox7" direction="Column" class="mck_Tile">
                            <Title id="_IDGenTitle7" class="mck_TileContentTitle" text="{i18n>tileTitle7}"/>
                            <Text id="_IDGenNumericContent7" class="mck_TileContent" text="{path: 'summaryCounts>/counts/Recalls'}"/>
                        </FlexBox>
                    
				    </HeaderContainer>
                </Panel>
			</f:DynamicPageHeader>
		</f:header>
        <f:content>
            
            <st:SmartTable 
                xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
                width="100%" 
                direction="Column" 
                fitContainer="true" 
                tableType="ResponsiveTable" 
                header="{i18n>tableTitle}" 
                enableAutoBinding="true" 
                id="table0" 
                smartFilterId="bar0" 
    
                cd:w5g.dt.context="/INVENTORYVALUATION" 
                entitySet="INVENTORYVALUATION" 
                placeToolbarInTable="true" 
                useExportToExcel="true" 
                beforeExport="onBeforeExport" 
                useVariantManagement="true" 
                useTablePersonalisation="true" 
                showRowCount="true" 
                persistencyKey="SmartTableAnalytical_Explored" 
                demandPopin="true" 
                enableAutoColumnWidth="true" 
                class="sapUiResponsiveContentPadding"
            >
                <t:Table id="table" alternateRowColors="true">
                    <t:columns>
                        <t:Column id="_IDGenColumn" width='7.813rem'>
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "SKU", "leadingProperty": "SKU", "columnIndex": 0}'/>
                            </t:customData>
                            <Text id="_IDGenText3" text="SKU"></Text>
                            <t:template>
                                <Text id="sku" text="{path: 'SKU', formatter: '._removeLeadingZeros'}"/>
                            </t:template>     
                        </t:Column>
                        <t:Column id="_IDGenColumn4" width='7.813rem'>
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "PRODUCT_CODE", "leadingProperty": "PRODUCT_CODE", "columnIndex": 1}'/>
                            </t:customData>
                            <Text id="_IDGenText4" text="Product Code"></Text>
                            <t:template>
                                <Text id="productCode" text="{path: 'PRODUCT_CODE', formatter: '._removeLeadingZeros'}"/>
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn5" width='7.813rem'>
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "UNIT_COST", "leadingProperty": "UNIT_COST", "columnIndex": 3}'/>
                            </t:customData>
                            <Text id="_IDGenText5" text="Unit Cost"></Text>
                            <t:template>
                                <Text id="unitCost" text="{path: 'UNIT_COST', formatter: '._formatCurrency'}"/>
                            </t:template>                           
                        </t:Column>
                        <t:Column id="_IDGenColumn6" width='7.813rem'>
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "TOTAL_COST", "leadingProperty": "TOTAL_COST", "columnIndex": 4}'/>
                            </t:customData>
                            <Text id="_IDGenText6" text="Total Cost"></Text>
                            <t:template>
                                <Text id="totalCost" text="{path: 'TOTAL_COST', formatter: '._formatCurrency'}"/>
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
            </st:SmartTable>
        </f:content>
        <f:footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1" height="auto" class="footer">
                <!-- Added by Bryan Cash in order to make the footer fully responsive for mobile devices -->                    
                <FlexBox id="_IDGenFlexBox32" width="100%" justifyContent="SpaceBetween" wrap="Wrap">
                    <FlexBox id="_IDGenFlexBox10">
                        <ObjectIdentifier id="_IDGenObjectIdentifier1"
                            title="{i18n>totals}"
