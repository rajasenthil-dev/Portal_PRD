                            <Text id="footerText5" class="footerText" text ="{path: 'footerCounts>/counts/Retains', formatter: '._formatNumber'}"/>
                        </HBox>	
                        <HBox id="_IDGenHBox3" class="sapUiSmallMarginEnd">
                            <Label id="_IDGenLabel34" text="{i18n>footerLabel6}:" class="cssLabelTotal"/>
                            <Text id="footerText6" class="footerText" text ="{path: 'footerCounts>/counts/QualityHold', formatter: '._formatNumber'}"/>
                        </HBox>	
                        <HBox id="_IDGenHBox35" class="sapUiSmallMarginEnd">
                            <Label id="_IDGenLabel35" text="{i18n>footerLabel7}:" class="cssLabelTotal"/>
                            <Text id="footerText7" class="footerText" text ="{path: 'footerCounts>/counts/Returns', formatter: '._formatNumber'}"/>
                        </HBox>	
                        <HBox id="_IDGenHBox36" class="sapUiSmallMarginEnd">
                            <Label id="_IDGenLabel36" text="{i18n>footerLabel7}:" class="cssLabelTotal"/>
                            <Text id="footerText8" class="footerText" text ="{path: 'footerCounts>/counts/Recalls', formatter: '._formatNumber'}"/>
                        </HBox>	
                    </FlexBox>
                </FlexBox>
			</OverflowToolbar>
        </f:footer>
      
    </f:DynamicPage>
</mvc:View>