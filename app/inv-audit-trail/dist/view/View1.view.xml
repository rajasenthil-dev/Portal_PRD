                                <Label id="_IDGenLabel2" text="{i18n>footerLabel1}:" class="cssLabelTotal"/>
                                <Text id="footerText1" class="footerText" text =""/>
                            </HBox>
                        </FlexBox>
                    </FlexBox>
                </OverflowToolbar>
            </f:footer>
        
        </f:DynamicPage>
    </App>
</mvc:View>