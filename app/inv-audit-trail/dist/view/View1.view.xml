                                </t:customData>
                                <Text id="_IDGenText322" text="{i18n>INVENTORYAUDITTRAIL.DIN}"></Text>
                                <t:template>
                                    <Text id="invoiceDate22" text="{path: 'DIN'}"/>
                                </t:template>
                            </t:Column>
